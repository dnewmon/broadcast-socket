{
    "name": "broadcast-socket",
    "version": "1.0.0",
    "description": "A broadcast websocket server system with channel support",
    "private": true,
    "workspaces": [
        "packages/*",
        "packages/frontend/example"
    ],
    "bin": {
        "broadcast-socket-server": "./packages/backend/bin/cli.js"
    },
    "scripts": {
        "build": "npm run build --workspaces --if-present",
        "dev:backend": "npm run dev -w @broadcast-socket/backend",
        "dev:frontend": "npm run dev -w @broadcast-socket/frontend",
        "dev:example": "npm run dev -w @broadcast-socket/example"
    },
    "keywords": [
        "websocket",
        "socket.io",
        "react",
        "typescript"
    ],
    "author": "David Newmon",
    "license": "MIT"
}
